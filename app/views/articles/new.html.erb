<h1>New Article</h1>
<%= form_with model:@article, url: articles_path, local: true do |f| %>
  <%= render 'shared/error_messages', model: f.object %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.file_field :image, id:'article-image' %>
  </p>
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
  <p>
    <%= f.label :youtube_url %><br>
    <%= f.text_field :youtube_url %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>