<main role="main">
  <div class="album py-5 bg-light">
    <div class="container">
      <div class="row">
        <% @articles.each do |article| %>
        <div class="col-md-4">
          <div class="card mb-4 shadow-sm">
            <% if article.image.attached? %>
            <%= image_tag article.image.variant(resize: '500x500'),class:"bd-placeholder-img card-img-top", width:"100%", height:"225" %>
            <% else %>
            <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Thumbnail"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"/><text x="50%" y="50%" fill="#eceeef" dy=".3em">Nil</text></svg>
            <% end %>
            <div class="card-body">
              <p class="card-text"><%= article.title %></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <%= link_to '詳細', article_path(article), class: "btn btn-sm btn-outline-secondary" %>
                  <%= link_to '編集', edit_article_path(article), class: "btn btn-sm btn-outline-secondary" %>
                  <%= link_to '削除', article_path(article),
                      method: :delete,
                      data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-outline-secondary" %>
                </div>
                <small class="text-muted">タグ</small>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</main>